extends layout

block content
    h1= title

    div(class="goals")
        each goal in goals
            div(class=`${goal.is_completed ? "completed-goal" : "goal"}`)
                a(href=goal.url) #{goal.goal}
                |  (End date: #{goal.due_date.toDateString()})
    
    a(href="/create") Create Goal

    <h1>please log in</h1>
    <form action="/log-in" method="POST">
    <label for="username">Username</label>
    <input name="username" placeholder="username" type="text" />
    <label for="password">Password</label>
    <input name="password" type="password" />
    <button>Log In</button>
    </form>
    form(method="POST" action="/")